# Configuración del servidor
PORT=10000
NODE_ENV=production
LOG_LEVEL=info

# OpenAI API
OPENAI_API_KEY=tu_clave_openai_aqui

# Tawk.to Webhook
TAWK_WEBHOOK_SECRET=tu_secreto_tawk_aqui
TAWK_API_KEY=tu_api_key_tawk_aqui
TAWK_PROPERTY_ID=tu_property_id_tawk_aqui

# Base de datos PostgreSQL (opcional - si no está, funciona sin DB)
DATABASE_URL=postgresql://usuario:password@host:5432/database

# Redis Cache (opcional - si no está, usa cache en memoria)
REDIS_URL=redis://host:6379

# Configuración de embeddings
EMBEDDING_MODEL=text-embedding-3-large
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Configuración de respuestas
MAX_TOKENS=500
TEMPERATURE=0.7
MODEL=gpt-4-turbo-preview

# Configuración de cache
CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT para autenticación (opcional)
JWT_SECRET=tu_secreto_jwt_aqui
JWT_EXPIRES_IN=24h

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090
